#!/usr/bin/env bash
#
# Generate proper versioning include file
#
CURDATE=$(date +%Y\/%m\/%d\ %H:%M:%S)

if [ -d .git ]	# git versioning available?
then
	CURVERS=$(git branch | grep '^\* ' | sed -e 's/[* ]//g')

	if [ "$CURVERS" = master ]
	then
		CURVERS="T$(date +%Y%m%d%H%M%S)"
	fi
else
	exit 0	# do not modify
fi

echo "#define	NETATOPVERSION	\"$CURVERS\""	 > src/netatopversion.h
echo "#define	NETATOPDATE	\"$CURDATE\""	>> src/netatopversion.h
